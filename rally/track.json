{% if index_count is not defined %}
{% set index_count=1 %}
{% endif %}

{% import "rally.helpers" as rally with context %}
{
  "version": 2,
  "description": "APM benchmark for Rally",
  "indices": [
    {
      "name": "apm-error",
      "body": "index.json",
      "types": [ "type" ]
    },
    {
      "name": "apm-transaction",
      "body": "index.json",
      "types": [ "type" ]
    },
    {
      "name": "apm-span",
      "body": "index.json",
      "types": [ "type" ]
    },
    {% set comma = joiner() %}
    {% for item in range(index_count) %}
    {{ comma() }}
    {
      "name": "apm-error-{{item}}",
      "body": "index.json",
      "types": [ "type" ]
    },
    {
      "name": "apm-transaction-{{item}}",
      "body": "index.json",
      "types": [ "type" ]
    },
    {
      "name": "apm-span-{{item}}",
      "body": "index.json",
      "types": [ "type" ]
    }
    {% endfor %}
  ],
  "corpora": [
    {
      "name": "apm-events",
      "target-type": "type",
      "documents": [
        {
          "target-index": "apm-error",
          "source-file": "corpora/error.json",
          "document-count": 182500,
          "uncompressed-bytes": 3918751870 
        },
        {
          "target-index": "apm-transaction",
          "source-file": "corpora/transaction.json",
          "document-count": 3834980,
          "uncompressed-bytes": 5682067160
        },
        {
          "target-index": "apm-span",
          "source-file": "corpora/span.json",
          "document-count": 4857640,
          "uncompressed-bytes": 44530160320
        }
      ]
    },
    {% set comma = joiner() %}
    {% for item in range(index_count) %}
    {{ comma() }}
    {
      "name": "apm-events-{{item}}",
      "target-type": "type",
      "documents": [
        {
          "target-index": "apm-error-{{item}}",
          "source-file": "corpora/error-{{item}}.json",
          "document-count": 18250
        },
        {
          "target-index": "apm-transaction-{{item}}",
          "source-file": "corpora/transaction-{{item}}.json",
          "document-count": 383498
        },
        {
          "target-index": "apm-span-{{item}}",
          "source-file": "corpora/span-{{item}}.json",
          "document-count": 485764
        }
      ]
    }
    {% endfor %}
  ],
  "operations": [
    {{ rally.collect(parts="operations/*.json") }}
  ],
  "challenges": [
    {{ rally.collect(parts="challenges/*.json") }}
  ]
}
